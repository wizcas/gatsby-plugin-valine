{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "declaration": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
